<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp">

    <TextView
        android:id="@+id/book_requests_requester_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_marginStart="20dp"
        android:text="@string/book_requests_requester_username"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/accept_book_view_requester_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="90dp"
        android:layout_toEndOf="@id/book_requests_requester_username"
        android:text="@string/accept_book_view_requester_profile"
        android:textSize="16sp" />


</RelativeLayout>